<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorApp2.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout x:Name="MasterLayout">

            <StackLayout  x:Name="LogoStack">
                <Image x:Name="LoginIcon" Source="LoginIcon.jpg" Margin="0,80,0,0"/>
            </StackLayout>


            <StackLayout x:Name="LoginEntries" VerticalOptions="StartAndExpand" >
                <StackLayout.Padding>
                    <OnIdiom x:TypeArguments="Thickness"  Phone="40,0,40,0" Tablet="140,150,140,0">
                    </OnIdiom>
                </StackLayout.Padding>

                <ActivityIndicator x:Name="ActivitySpinner" Color="Red" IsRunning="True"/>

                <Label x:Name="Lbl_Username" Text="Username" />
                <Entry x:Name="Entry_Username" Placeholder="Username"/>
                <Label x:Name="Lbl_Password" Text="Password" />
                <Entry x:Name="Entry_Password" Placeholder="Password"/>
                <Button x:Name="Btn_Signin" Text="Sign in" Clicked="SignIn"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>