<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorApp2.Views.ShowPost">
    <ContentPage.Content>
        <ScrollView Padding="5,0,5,0">
        <Grid Grid.Column="0" BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO"></RowDefinition>
                <RowDefinition Height="200"></RowDefinition> <!--image-->
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.GestureRecognizers>
                <TapGestureRecognizer  CommandParameter="{Binding UID}"/>
            </Grid.GestureRecognizers>
            <!--<StackLayout  Grid.Row="0" Orientation="Horizontal"  HorizontalOptions="CenterAndExpand">
                                                <Image Source="{Binding image}" Aspect="AspectFill" HorizontalOptions="CenterAndExpand" />
                                            </StackLayout>-->
            <Label Grid.Row="0" Font="30,Bold" Text="{Binding Title}"  HorizontalOptions="Center"/>
            <Image Grid.Row="1" Source="{Binding PosterPicPath}" HorizontalOptions="Center"></Image>
            <Label Grid.Row="2"  Text="{Binding Content}"  />
            <Label Grid.Row="3" Font="20,Bold" Text="Comments"></Label>
            <Grid Grid.Row="4" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Entry x:Name="comment" Grid.Row="0" ></Entry>
                <Button Grid.Row="1" Text="投稿する" Clicked="Updatecomments"></Button>
                <Label Grid.Row="2" x:Name="Commentstatus"></Label>
            </Grid>
                <ListView x:Name="Comment" Grid.Row="5"  HasUnevenRows="True">

                <ListView.ItemTemplate>
                        <DataTemplate>
                          <ViewCell>
                            <ViewCell.View>
                                        <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition ></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Label Font="Bold" Grid.Row="0" Text="{Binding CommentorName}"></Label>
                                        <Label Grid.Row="1" Text="{Binding CID}"></Label>
                                        <Button Grid.Row="2" Text="see replies" Clicked="ShowReplies"></Button>
                                        <Grid Grid.Row="3" IsVisible="True" x:Name="hid" BindingContext="{Binding CID}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Entry  Grid.Row="0"  Text="{Binding .}"></Entry>
                                            <Button Grid.Row="2" Text="投稿する" Clicked="Updatesubcomments" BindingContext="{Binding .}"></Button>
                                        </Grid>
                                        </Grid>
                                        
                            </ViewCell.View>
                          </ViewCell>
                        </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--<StackLayout x:Name="Comment" Grid.Row="4" Orientation="Horizontal"  >
                <Label Text="{Binding Comments}"
                                                        TextColor="#f35e20" />
            </StackLayout>-->
            <!--<Grid Grid.Row="5"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70*"></ColumnDefinition>
                    <ColumnDefinition Width="30*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Entry x:Name="comment" Grid.Column="0"
                                                        HorizontalOptions="Start"
                                                            TextColor="#503026" />
                <Button x:Name="commentsend" Grid.Column="1" Clicked="Updatecomments"
                                                        HorizontalOptions="EndAndExpand" Text="SEND"
                                                            TextColor="#503026" />
            </Grid>-->
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>