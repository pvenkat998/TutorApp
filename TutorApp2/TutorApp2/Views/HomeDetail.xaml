<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorApp2.Views.HomeDetail"
             Title="Detail">
    <StackLayout x:Name="MasterLayout">

        <StackLayout Padding="10">
            <Label x:Name="txt" Text="教師一覧"/>
            <Image x:Name="img" />
            <Label x:Name="t1" Text="教師一覧"/>
        </StackLayout>
        
        <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
            
            <StackLayout Padding="10">
                <ListView ItemsSource="{Binding .}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <StackLayout>
                                        <Label Text="{Binding gakunen}" ></Label>
                                        <Label Text="{Binding name}"></Label>
                                        <Label Text="{Binding kamoku}" ></Label>
                                        <Label Text="{Binding moyori}" ></Label>
                                        <Image Source="{Binding image}" />
                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>

    </StackLayout>
</ContentPage>